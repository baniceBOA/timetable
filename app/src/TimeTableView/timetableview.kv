<TimetableView>:
    size_hint_y:None
    size_hint_x:None
    width:root.width
    height:root.height

    #TOP LABEL FOR DAYS 
    MDGridLayout:
        pos_hint:{'top':1}
        id:top_label
        rows:1
    
    # LEFT LABEL TAGS  FOR CLASSES
    MDGridLayout:
        pos_hint:{'top':0.8, 'center_x':0}
        id:left_label
        cols:1
    

    #LESSON GRID VIEW
    LessonGrid:
        id:lesson_grid
        pos_hint:{'top':0.1, 'center_x':0}
        cols:root.cols
        rows:root.rows
        



    

    

