<TimetableView>:
    size_hint_y:None
    size_hint_x:None
    width:root.width
    height:root.height

    #TOP LABEL FOR DAYS 
    MDGridLayout:
        pos_hint:{'top':1}
        id:top_label
        rows:1
    
    # LEFT LABEL TAGS  FOR CLASSES
    MDGridLayout:
        pos_hint:{'top':0.8, 'center_x':0}
        id:left_label
        cols:1
    

    #LESSON GRID VIEW
    MDScrollView:

        pos_hint:{'top':1, 'right':1.5}
        size_hint_y:None
        height:dp(800)
        size_hint_x:None
        width:dp(800)
        do_scroll_x:True
        do_scroll_y:False
        bar_margin:20
        bar_width:10
        MDBoxLayout:
            adaptive_size:True
            LessonGrid:
                
                id:lesson_grid
                cols:root.cols
                rows:root.rows
                size_hint_x:None
                width:dp(1000)
            
        



    

    

